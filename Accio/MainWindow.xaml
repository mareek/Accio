<Window x:Class="Accio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Accio"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo />
    </Window.TaskbarItemInfo>
    <DockPanel>
        <Button Name="DownloadButton" DockPanel.Dock="Top" Click="DownloadButton_Click" IsDefault="True">Get availability</Button>
        <TextBox Name="OutputBox" Height="200" DockPanel.Dock="Top" GotFocus="OutputBox_GotFocus" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <WebBrowser Name="Browser"></WebBrowser>
    </DockPanel>
</Window>
